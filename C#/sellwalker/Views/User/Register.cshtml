@{
    ViewData["Title"] = "REGISTER | SellWalker";
}
@model sellwalker.Models.Register

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">SellWalker</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li>
            <a href="/login">Login</a>
        </li>
      </ul>
      
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
<h1>Registration</h1>
<hr>
<form asp-controller="User" asp-action="Register" method="post">
    <label asp-for="FirstName">First Name</label>
    <input asp-for="FirstName"/>
    <span asp-validation-for="FirstName"></span>

    <br>
    <label asp-for="LastName">Last Name</label>
    <input asp-for="LastName"/>
    <span asp-validation-for="LastName"></span>
    <br>
    <label asp-for="Email"></label>
    <input asp-for="Email"/>
    <span asp-validation-for="Email"></span>

    <br>
    <label asp-for="Password"></label>
    <input asp-for="Password"/>
    <span asp-validation-for="Password"></span>

     <br>
    <label asp-for="ConfirmPassword">Confirm password</label>
    <input asp-for="ConfirmPassword" type="password"/>
    <span asp-validation-for="ConfirmPassword"></span>

    <br>
    <button type="submit">Register</button>
</form>
<hr>
<h3>Already registered? <a href="/login">Log In!</a></h3>