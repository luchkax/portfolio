<div class="mainSettings">
    <h1>Edit your information</h1>
    <hr>
             
        
   
    <div class="left">
        <!-- <br> -->
        <h2>Main info</h2>
        <form asp-controller="Home" asp-action="UpdateInfo" method="post"  enctype="multipart/form-data">
            <div class="form-group">
              <label asp-for="FirstName">First Name</label>
              <input  asp-for="FirstName" class="form-control" id="FirstName" type="text" value="@ViewBag.userFirst">
              <span asp-validation-for="FirstName"></span>   
              <br>
              <label asp-for="LastName">Last Name</label>
              <input  asp-for="LastName" class="form-control" id="LastName" type="text" value="@ViewBag.userLast">
              <span asp-validation-for="LastName"></span>   
              <br>
              <label asp-for="Email">Email</label>
              <input  asp-for="Email" class="form-control" id="Email" type="text" value="@ViewBag.userEmail">
              <span asp-validation-for="Email"></span>   
              <br>
            <br>
            <button type="submit" class="btn btn-default">Save</button>
         </div>
    </div>

<div class="right">
            <label asp-for="ProfileImage"><h4>Profile picture</h4></label> 
        @{
            if(@ViewBag.userPic != null)
            {
                 <img src="@ViewBag.userPic" alt="image">
                <br>

            }
            else
            {
                <p>Upload new picture</p>
                <img src="~/images/Unknown.png" alt="image">
                <br>

            }
        }
            <div class="input">

                    <input  asp-for="ProfileImage" type="file" class="form-control" id="ProfileImage">
                    <span asp-validation-for="ProfileImage"></span>
            </div>
        </div>
    </form> 


