@{
    ViewData["Title"] = "Home Page";
}
@model LoginRegCore.Models.Register
<body>

    <form action="Home/register" method="post">
        <div class="container">
            <h1>Register</h1>
            <p>Please fill in this form to create an account.</p>
            <hr>

            <label for="FirstName"><b>First Name</b></label>
            <input type="text" placeholder="Enter First Name" name="FirstName" required>
            <span asp-validation-for="FirstName" style="color: red"></span>
            <br />
            <label for="LastName"><b>Last Name</b></label>
            <input type="text" placeholder="Enter Last Name" name="LastName" required>
            <span asp-validation-for="LastName" style="color: red"></span>
            <br />
            <label for="Email"><b>Email</b></label>
            <input type="text" placeholder="Enter Email" name="Email" required>
            <span asp-validation-for="Email" style="color: red"></span>
            <br />
            <label for="Password"><b>Password</b></label>
            <input type="password" placeholder="Enter Password" name="Password" required>
            <br />
            <label for="PasswordRep"><b>Repeat Password</b></label>
            <input type="password" placeholder="Repeat Password" name="PasswordRep" required>
            <span asp-validation-for="PasswordRep" style="color: red"></span>
            <hr>
            <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>

            <button type="submit" class="registerbtn">Register</button>
        </div>

        <div class="container signin">
            <p>Already have an account? <a href="/log_in">Sign in</a>.</p>
        </div>
    </form>

</body>