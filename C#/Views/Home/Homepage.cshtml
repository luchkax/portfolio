@TempData["error"]
<div class="header">
        <div class="card1 card-inverse" style="background-color: #333; border-color: #333;">
            <div class="card-block1">
                <h3 class="card-title">SellWalker</h3>
                <p class="card-text">Have extra stuff? No problems! Sell. Just sell it!</p>
                <a href="/add_product" class="btn btn-primary">Sell Product</a>
            </div>
        </div>
     </div>

<div class="mainHome">
  <br>
<h2 style="margin-left: 230px;">Hello, @ViewBag.name! Here are the latest products selling</h2>
  <div class="searchHome">
    <form asp-controller="Home" asp-action="SearchProduct" method="POST">
    <div id="custom-search-input">
                <div class="input-group col-md-12">
                    <input type="text" name="result" class="form-control input-lg" placeholder="e.g. iPhone 8 Plus" />
                    <span class="input-group-btn">
                        <button class="btn btn-info btn-lg" type="button">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </span>
                </div>
            </div>
          </form>
  </div>
  <div class="upperHome">
    <div class="productHome">
              @{
          foreach (var item in @ViewBag.allProd)
          {
              <div class="card" style="width: 20rem;">
              @if(@item.Picture == null)
              {
                  <a href="/product/@item.ProductId"><img src="~/images/noimage.png" alt="no image"></a>
              }
              else
              {
                  <a href="/product/@item.ProductId"><img class="card-img-top" src="@item.Picture" alt="Card image cap"></a>            
              }
              <div class="card-block">
                  <h4 class="card-title">@item.Title</h4>
                  <p><span class="label label-success">$@item.Price</span></p>                  
                  <p class="card-text">@item.Description</p>
                  <a href="/product/@item.ProductId" class="btn btn-primary">View</a>
              </div>
          </div>
        }
      }
          </div>
  </div>
</div>
